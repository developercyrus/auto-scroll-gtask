{
    "manifest_version": 2,   
    "name": "Auto Scroll Google Tasks",
    "description": "To scroll automatically inside Google Tasks",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"], 
        "persistent": true
    },       
    "browser_action": {
        "default_title": "start scroll"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}